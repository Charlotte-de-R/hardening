FROM mariadb:latest

ENV DEBIAN_FRONTEND=noninteractive

ARG CACHEBUST=1
RUN echo "Cache bust: $CACHEBUST" && \
    apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        openssl \
        zlib1g \
    && apt-get autoremove -y \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
